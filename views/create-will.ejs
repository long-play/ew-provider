<div>
    <form action="">
    <legend class="uk-legend">Fill in your contact information</legend>
    <p>Fill in an email you are accessible for periodical confirmation you are alive</p>

    <div class="uk-form-horizontal uk-grid uk-grid-small uk-margin-small-top">
        <div class="uk-width-2-3">
            <input id="email-address" class="uk-input" type="text" placeholder="E-mail">
        </div>
        <div class="uk-width-1-3">
            <button id="submit-email" class="uk-button uk-button-default uk-width-1-1" type="button" tabindex="-1">Submit</button>
        </div>
    </div>
    <div id="submitted-email-successful" class="uk-text-success">The confirmation email is sent. Please input the confirmation code below</div>
    <div id="submitted-email-fail" class="uk-text-danger"></div>

    <div class="uk-form-horizontal uk-grid uk-grid-small uk-margin-small-top">
        <div class="uk-width-2-3">
            <input id="confirmation-code" class="uk-input" type="text" placeholder="Confirmation code">
        </div>
        <div class="uk-width-1-3">
            <button id="confirm-email" class="uk-button uk-button-default uk-width-1-1" type="button" tabindex="-1">Confirm</button>
        </div>
    </div>
    <div id="confirmed-email-successful" class="uk-text-success">The email is confirmed successfully. You will be redirected to <a id="redirect-link" href="">WPlatform</a> site in a few seconds</div>
    <div id="confirmed-email-fail" class="uk-text-danger"></div>

</div>

<script src="js/create-will.js"></script>
